@model CtrlOrdem.Models.Tecnico

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Dados do Técnico</h1>

<hr />
<div class="row">
    <form asp-action="Detalhes">
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TecnicoId" />

            <div class="col-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="RG" class="control-label"></label>
                <input asp-for="RG" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" readonly />
            </div>

            <div class="col-4">
                <label asp-for="Nacionalidade" class="control-label"></label>
                <input asp-for="Nacionalidade" class="form-control" readonly />
            </div>

            <div class="col-4">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" readonly />
            </div>

            <div class="col-4">
                <label asp-for="EstadoCivil" class="control-label"></label>
                <input asp-for="EstadoCivil" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" readonly />
            </div>

            <div class="col-5">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" readonly />
            </div>
            <div class="col-1">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Cargo" class="control-label"></label>
                <input asp-for="Cargo" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Departamento" class="control-label"></label>
                <input asp-for="Departamento" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="DataContratacao" class="control-label"></label>
                <input asp-for="DataContratacao" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" readonly />
            </div>
            <div class="form-group mt-5">
                <a asp-action="Edit" asp-route-id="@Model?.TecnicoId" class="btn btn-sm btn-primary">Alterar</a> |
                <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script> src = "@Url.Content("~/js/jquery-validate-pt-BR.js")"</script>
}
