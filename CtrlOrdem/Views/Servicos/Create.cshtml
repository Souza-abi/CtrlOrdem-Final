@model CtrlOrdem.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Serviço</h1>

<hr />
<div class="row">
    <form asp-action="Create">
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-8">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="clearfix"></div>

            <div class="col-3">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control">
                    <option selected>Selecione...</option>
                    <option value="Instalação de hardware">Instalação de hardware</option>
                    <option value="Instalação de Software">Instalação de Software</option>
                    <option value="Manutenção de hardware">Manutenção de hardware</option>
                    <option value="Manutenção de Software">Manutenção de Software</option>
                    <option value="Configuração e manutenção de redes">Configuração e manutenção de redes</option>
                    <option value="Backup e recuperação de dados">Backup e recuperação de dados</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="Garantia" class="control-label"></label>
                <input asp-for="Garantia" class="form-control" />
                <span asp-validation-for="Garantia" class="text-danger"></span>
            </div>

            <div class="form-group mt-5">
                <input type="submit" value="Salvar" class="btn btn-sm btn-primary" /> |
                <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/js/jquery-validate-pt-BR.js")"</script>
}
