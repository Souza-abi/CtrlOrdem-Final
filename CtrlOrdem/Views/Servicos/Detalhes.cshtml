@model CtrlOrdem.Models.Servico

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Dados do Serviço</h1>

@* <h4>Servico</h4> *@
<hr />
<div class="row">
    <form asp-action="Detalhes">
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicoId" />

            <div class="col-8">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" readonly />
            </div>
            <div class="clearfix"></div>

            <div class="col-3">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="Garantia" class="control-label"></label>
                <input asp-for="Garantia" class="form-control" readonly />
            </div>

            <div class="form-group mt-5">
                <a asp-action="Edit" asp-route-id="@Model?.ServicoId" class="btn btn-sm btn-primary">Alterar</a> |
                <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/js/jquery-validate-pt-BR.js")"</script>
}
