@model CtrlOrdem.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Dados do Cliente</h1>

<hr />
<div class="row">
    <form asp-action="Detalhes">
        <div class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteID" />

            <div class="col-4">
                <label asp-for="NomeCompleto" class="control-label"></label>
                <input asp-for="NomeCompleto" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="CPFCNPJ" class="control-label"></label>
                <input asp-for="CPFCNPJ" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="DataNA" class="control-label"></label>
                <input asp-for="DataNA" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="EstadoCivil" class="control-label"></label>
                <input asp-for="EstadoCivil" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="Contato" class="control-label"></label>
                <input asp-for="Contato" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="TipoContato" class="control-label"></label>
                <input asp-for="TipoContato" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" readonly />
            </div>
            <div class="col-5">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" readonly />
            </div>
            <div class="col-1">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" readonly />
            </div>

            <div class="col-4">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" readonly />
            </div>
            <div class="col-4">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" readonly />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" readonly />
            </div>
            <div class="col-3">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" readonly />
            </div>

            <div class="form-group mt-5">
                <a asp-action="Edit" asp-route-id="@Model?.ClienteID" class="btn btn-sm btn-primary">Alterar</a> |
                <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
            </div>
        </div>
    </form>
</div>

