@model IEnumerable<CtrlOrdem.Models.Ordem>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Ordens</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Abrir Ordem</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TecnicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tempo)
            </th>
            <th>
                Ações
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Cliente.NomeCompleto))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tecnico.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Abertura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servico.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procedimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tempo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrdemId" class="btn btn-sm btn-outline-warning"><i class="bi bi-file-earmark-text"></i> Alterar</a>
                    <a asp-action="Details" asp-route-id="@item.OrdemId" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"> Consultar</i></a>
                    <a asp-action="Delete" asp-route-id="@item.OrdemId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
